@import "_variables"

@font-face
  font-family 'chat'
  src url(icomoon-font-path + '/chat.ttf?lhvgr4') format('truetype'), url(icomoon-font-path + '/chat.woff?lhvgr4') format('woff'), url(icomoon-font-path + '/chat.svg?lhvgr4#chat') format('svg')
  font-weight normal
  font-style normal

[class^="c-icon-"], [class*=" c-icon-"]
  font-family 'chat' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.c-icon-bubbles
  &:before
    content c-icon-bubbles
.c-icon-users
  &:before
    content c-icon-users
.c-icon-search
  &:before
    content c-icon-search
.c-icon-star-full
  &:before
    content c-icon-star-full
.c-icon-plus
  &:before
    content c-icon-plus

