@import "../shared/_iconfont";

html
  -webkit-tap-highlight-color: transparent;
  overflow-x: hidden;
  height: 100%;
  min-width: 6.4rem;
  font-size: 312.5%;

@media screen and (min-width: 410px) {
  html {
    font-size 400%
  }
}

@media screen and (min-width: 480px) {
  html {
    font-size 469%
  }
}

@media screen and (min-width: 640px) {
  html {
    font-size 625%
  }
}

body, .app
  height 100%

a
  text-decoration none
